<div class="main_nav_color">
  <div class="wrapper">
    <header id="main_header" class="cf">
      <%= link_to "arabecademy", root_path, :id => "logo" %>
        <nav>
          <ul>
            <li>
              <%= link_to "#" do %>
                Grade<span class="glyphicon glyphicon-chevron-down"></span>
              <% end %>
              <ul>
                <% @grades.each do |grade| %>
                  <li><%= link_to "Grade" + grade.grade_number, grade_courses_path(grade) %></li>
                <% end %>
              </ul>
            </li>
            <li><a href="#">About</a></li>
            <li><a href="#">Contact</a></li>
            <% if user_signed_in? %>
            <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
            <li><%= link_to "Accout Settings", edit_user_registration_path %></li>
            <% else %>
            <li><%= link_to "Log in", new_user_session_path %></li>
            <li><%= link_to "Sign Up", new_user_registration_path, :class => "button_sm button_orange" %></li>
            <% end %>
          </ul>
        </nav>
    </header>
  </div>
</div>