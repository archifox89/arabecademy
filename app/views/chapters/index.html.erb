<p id="notice"><%= notice %></p>

<h1>Listing Chapters</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course.chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.title %></td>
        <td><%= chapter.description %></td>
        <td><%= chapter.course_id %></td>
        <td><%= link_to 'Show', [@course, chapter] %></td>
        <% if can? :update, @chapter %>
          <td><%= link_to 'Edit', edit_course_chapter_path(@course,chapter) %></td>
        <% end %>
        <% if can? :destroy, @chapter %>
          <td><%= link_to 'Destroy', [@course, chapter], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, @chapter %>
  <%= link_to 'New Chapter', new_course_chapter_path(@course, @chapter) %>
<% end %>
<%= link_to 'Back', grade_course_path(@course.grade, @course) %>

