<p id="notice"><%= notice %></p>

<h1>Listing Packages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Course</th>
      <th>Chapter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course.packages.each do |package| %>
      <tr>
        <td><%= package.title %></td>
        <td><%= package.price %></td>
        <td><%= link_to 'Show', [@course, package] %></td>
        <% if can? :update, @package %>
          <td><%= link_to 'Edit', edit_course_package_path(@course, package) %></td>
        <% end %>
        <% if can? :destroy, @package %>
          <td><%= link_to 'Destroy', [@course, package], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, @package %>
  <%= link_to 'Create Pacakge', new_course_package_path(@course, @package) %>
<% end %>
<%= link_to 'Back', grade_course_path(@course.grade, @course) %>
